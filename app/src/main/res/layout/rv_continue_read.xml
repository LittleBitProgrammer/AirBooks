        <ImageView
            android:id="@+id/genre_color_continue_read"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@color/genereLibro" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardView_continue_read"
            android:layout_width="81dp"
            android:layout_height="112dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="-1dp"
            android:bottomLeftRadius="1dp"
            android:bottomRightRadius="1dp"
            android:topLeftRadius="0dp"
            android:topRightRadius="0dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/cardReviewImage_comtinue_read"
                android:layout_width="83dp"
                android:layout_height="110dp"
                android:scaleType="fitXY" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView13"
            android:layout_toRightOf="@+id/imageView13"
            android:paddingBottom="8dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_vuota" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView12"
            android:paddingBottom="9dp"
