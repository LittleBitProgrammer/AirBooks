<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="135dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="-1dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="20dp"
    android:clipToPadding="false"
    android:orientation="vertical"
    app:cardCornerRadius="2dp"
    app:cardElevation="7dp"
    app:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/firstTextReview_continue_read"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/author_continue_read"
            android:layout_toEndOf="@+id/cardView_continue_read"
            android:layout_toRightOf="@+id/cardView_continue_read"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingTop="0dp"
            android:text="Lorem ipsum dolor sit amet, elit alit consectetuer adipiscing elit. Elit alit aenean Lorem ipsum dolor sit amet, elit Elit aenean Lorem ipsum..."
            android:textColor="#8A939D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/author_continue_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_continue_read"
            android:layout_toEndOf="@+id/cardView_continue_read"
            android:layout_toRightOf="@+id/cardView_continue_read"
            android:fontFamily="@font/cookie"
            android:paddingLeft="16sp"
            android:text="By Roberto Vecchio"
            android:textColor="#AFB1B5"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/title_continue_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genre_color_continue_read"
            android:layout_toEndOf="@+id/cardView_continue_read"
            android:layout_toRightOf="@+id/cardView_continue_read"
            android:paddingLeft="16dp"
            android:text="All this has nothing"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- uncomment to show "see full description" -->


