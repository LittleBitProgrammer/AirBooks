<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="313dp"
    android:layout_height="122dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd= "-1dp"
    android:layout_marginTop="4dp"
    android:background="#ffffff"
    android:clipToPadding="false"
    android:elevation="12dp"
    android:translationZ="7dp"
    android:orientation="vertical"
    android:outlineProvider="bounds"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/firstTextReview"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_continue_read"
            android:layout_toEndOf="@+id/cardView_continue_read"
            android:layout_toRightOf="@+id/cardView_continue_read"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingTop="2dp"
            android:text="@string/text_review_profile"
            android:textColor="#8A939D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/author_continue_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_continue_read"
            android:layout_toEndOf="@+id/cardView_continue_read"
            android:layout_toRightOf="@+id/cardView_continue_read"
            android:fontFamily="@font/cookie"
            android:paddingLeft="16sp"
            android:text="@string/book_author_profile"
            android:textColor="#AFB1B5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/title_continue_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genre_color_continue_read"
            android:layout_toEndOf="@+id/cardView_continue_read"
            android:layout_toRightOf="@+id/cardView_continue_read"
            android:paddingLeft="16dp"
            android:text="@string/book_title_profile"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/see_full_continue_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/firstTextReview"
            android:layout_alignEnd="@+id/firstTextReview"
            android:layout_alignRight="@+id/firstTextReview"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="8dp"
            android:text="@string/read_all_profile"
            android:textColor="#4B85AA"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/genre_color_continue_read"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@color/genereLibro"
            android:contentDescription="@string/genre_color_profile"/>


        <android.support.v7.widget.CardView
            android:id="@+id/cardView_continue_read"
            android:layout_width="81dp"
            android:layout_height="106dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:topRightRadius="0dp"
            android:topLeftRadius="0dp"
            android:bottomRightRadius="1dp"
            android:bottomLeftRadius="1dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/cardReviewImage_comtinue_read"
                android:layout_width="81dp"
                android:layout_height="106dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/cover_book"/>

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView13"
            android:layout_toRightOf="@+id/imageView13"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_vuota"
            android:contentDescription="@string/stella_5"/>

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView12"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_piena"
            android:contentDescription="@string/stella_4"/>

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_piena"
            android:contentDescription="@string/stella_3"/>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView10"
            android:layout_toRightOf="@+id/imageView10"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_piena"
            android:contentDescription="@string/stella_2"/>

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="3dp"
            android:paddingLeft="9dp"
            app:srcCompat="@drawable/stella_piena"
            android:contentDescription="@string/stella_1"/>

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/firstTextReview"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/firstTextReview"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="32dp"
            android:tint="#4B85AA"
            app:srcCompat="@drawable/full_review"
            android:layout_marginRight="32dp"
            android:contentDescription="@string/image_see_full_review_profile"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>