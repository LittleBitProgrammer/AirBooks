<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="313dp"
    android:layout_height="122dp"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="-9dp"
    android:layout_marginTop="4dp"
    android:background="#ffffff"
    android:clipToPadding="false"
    android:elevation="12dp"
    android:translationZ="7dp"
    android:orientation="vertical"
    android:outlineProvider="bounds"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/firstTextReview"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toEndOf="@+id/cardView"
            android:layout_toRightOf="@+id/cardView"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="16dp"
            android:paddingTop="2dp"
            android:text="Lorem ipsum dolor sit amet, elit consectetuer adipiscing elit. Elit aenean..."
            android:textColor="#8A939D"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_toEndOf="@+id/cardView"
            android:layout_toRightOf="@+id/cardView"
            android:fontFamily="@font/cookie"
            android:paddingLeft="16sp"
            android:text="By Roberto Vecchio"
            android:textColor="#AFB1B5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView8"
            android:layout_toEndOf="@+id/cardView"
            android:layout_toRightOf="@+id/cardView"
            android:paddingLeft="16dp"
            android:text="All this has nothing"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/firstTextReview"
            android:layout_alignEnd="@+id/firstTextReview"
            android:layout_alignRight="@+id/firstTextReview"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="8dp"
            android:text="See full review"
            android:textColor="#4B85AA"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@color/genereLibro" />


        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="81dp"
            android:layout_height="106dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:topRightRadius="0dp"
            android:topLeftRadius="0dp"
            android:bottomRightRadius="1dp"
            android:bottomLeftRadius="1dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/cardReviewImage"
                android:layout_width="81dp"
                android:layout_height="106dp"
                android:scaleType="fitXY" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView13"
            android:layout_toRightOf="@+id/imageView13"
            android:paddingBottom="2dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_vuota" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView12"
            android:layout_toRightOf="@+id/imageView12"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_piena" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_piena" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView10"
            android:layout_toRightOf="@+id/imageView10"
            android:paddingBottom="3dp"
            android:paddingLeft="2dp"
            app:srcCompat="@drawable/stella_piena" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="3dp"
            android:paddingLeft="9dp"
            app:srcCompat="@drawable/stella_piena" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/firstTextReview"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/firstTextReview"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="32dp"
            android:tint="#4B85AA"
            app:srcCompat="@drawable/full_review" />

    </RelativeLayout>

</android.support.v7.widget.CardView>