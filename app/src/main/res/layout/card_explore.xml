<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/stellaPiena3"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/stellaPiena5"
        app:layout_constraintTop_toBottomOf="@+id/author_id"
        app:srcCompat="@drawable/stella_vuota" />

    <ImageView
        android:id="@+id/stellaPiena5"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/stellaPiena4"
        app:layout_constraintTop_toBottomOf="@+id/author_id"
        app:srcCompat="@drawable/stella_piena" />

    <ImageView
        android:id="@+id/stellaPiena4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/stellaPiena2"
        app:layout_constraintTop_toBottomOf="@+id/author_id"
        app:srcCompat="@drawable/stella_piena" />

    <ImageView
        android:id="@+id/stellaPiena2"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/stellaPiena"
        app:layout_constraintTop_toBottomOf="@+id/author_id"
        app:srcCompat="@drawable/stella_piena" />

    <ImageView
        android:id="@+id/stellaPiena"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/cardView2"
        app:layout_constraintTop_toBottomOf="@+id/author_id"
        app:srcCompat="@drawable/stella_piena" />

    <TextView
        android:id="@+id/author_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:fontFamily="serif"
        android:text="by Gerard Woodward"
        android:textColor="#4790E1"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bookName" />

    <TextView
        android:id="@+id/bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="All this has"
        android:textColor="#6C7A8C"
        android:textSize="33dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView2"
        android:layout_width="224dp"
        android:layout_height="341dp"
        android:orientation="vertical"
        app:cardCornerRadius="9dp">

        <ImageView
            android:id="@+id/cardImage_explore"
            android:layout_width="228dp"
            android:layout_height="341dp"
            android:scaleType="fitXY" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/number_reviews_explore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:text="97 Reviews"
        android:textColor="#9EA6B2"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stellaPiena3"
        app:layout_constraintTop_toBottomOf="@+id/author_id" />
</android.support.constraint.ConstraintLayout>