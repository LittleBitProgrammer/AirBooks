<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/top_bar_categories"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:contentDescription="@string/topBar"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/top_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/section_add_your_book"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar_categories"
        app:layout_constraintEnd_toEndOf="@+id/top_bar_categories"
        app:layout_constraintStart_toStartOf="@+id/top_bar_categories"
        app:layout_constraintTop_toTopOf="@+id/top_bar_categories" />

    <ImageButton
        android:id="@+id/left_arrow_add_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="#00000000"
        android:contentDescription="@string/back_button"
        android:paddingBottom="17dp"
        android:paddingEnd="20dp"
        android:paddingStart="16dp"
        android:paddingTop="20dp"
        android:scaleType="fitCenter"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dismiss_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/dismiss_button"
        android:scaleType="fitCenter"
        android:src="@drawable/dismiss"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar_categories"
        app:layout_constraintEnd_toEndOf="@+id/top_bar_categories"
        app:layout_constraintTop_toTopOf="@+id/top_bar_categories" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/Scroll_categories"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar_categories">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/contraints_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/categories_add_rv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/selecteGenre_lab"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="@string/select_genre_add_book"
                android:textColor="#6C7A8C"
                android:textSize="33sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/categories_add_rv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>