<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.corelab.airbooks.activity.Categories">

    <ImageView
        android:id="@+id/top_bar_categories"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:src="@drawable/barra_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/topBar"/>

    <TextView
        android:id="@+id/top_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/section_add_your_book"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar_categories"
        app:layout_constraintEnd_toEndOf="@+id/top_bar_categories"
        app:layout_constraintStart_toStartOf="@+id/top_bar_categories"
        app:layout_constraintTop_toTopOf="@+id/top_bar_categories" />

    <ImageButton
        android:id="@+id/left_arrow_add_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="17dp"
        android:paddingTop="20dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/back_button"/>

    <ImageButton
        android:id="@+id/dismiss_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/dismiss"
        app:layout_constraintBottom_toBottomOf="@+id/top_bar_categories"
        app:layout_constraintEnd_toEndOf="@+id/top_bar_categories"
        app:layout_constraintTop_toTopOf="@+id/top_bar_categories"
        android:layout_marginRight="18dp"
        android:contentDescription="@string/dismiss_button"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/categories_add_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selecteGenre_lab" />

    <TextView
        android:id="@+id/selecteGenre_lab"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="18dp"
        android:text="@string/select_genre_add_book"
        android:textColor="#6C7A8C"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/categories_add_rv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_categories" />

</android.support.constraint.ConstraintLayout>
