<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="321dp"
    android:layout_height="451dp"
    android:foreground="#00000000"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">

        <ImageView
            android:id="@+id/top_bar_description_popup"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:scaleType="fitXY"
            android:src="@drawable/barra_add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/topBar_alert"
            />

        <TextView
            android:id="@+id/title_description_popup_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/title_topBar_alert"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="24sp"
            app:layout_constraintTop_toTopOf="parent" />

        <it.corelab.airbooks.widget.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImagePlaceHolder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="126dp"
            android:layout_marginStart="126dp"
            android:layout_marginTop="16dp"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            android:src="@drawable/profile_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_bar_description_popup" />

        <it.corelab.airbooks.widget.JustifyTextView
            android:id="@+id/text_description_popup_event"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="16dp"

            android:layout_marginTop="12dp"
            android:gravity="center|right"

            android:text="@string/placeholder_text_showMore_alert"
            android:textAlignment="center"
            android:textColor="#6C7A8C"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileImagePlaceHolder" />

        <ImageButton
            android:id="@+id/dismiss_button_popup"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginBottom="17dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/dismiss"
            app:layout_constraintBottom_toBottomOf="@+id/top_bar_description_popup"
            app:layout_constraintEnd_toEndOf="@+id/top_bar_description_popup"
            app:layout_constraintTop_toTopOf="@+id/top_bar_description_popup"
            android:contentDescription="@string/dismiss_button"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>