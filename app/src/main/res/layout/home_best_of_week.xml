<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="154dp"
    android:layout_height="215dp"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="4dp"
    app:cardElevation="7dp"
    app:layout_constraintStart_toStartOf="parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_bestweek"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/cover_book"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#FFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/rettangolo_smussato_rv" />

        <com.github.florent37.shapeofview.shapes.DiagonalView
            android:id="@+id/rettangolo_smussato_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background_color"
            app:shape_diagonal_angle="4"
            app:shape_diagonal_position="bottom"
            app:shape_diagonal_direction="left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" >

            <ImageView
                android:id="@+id/color_diagonal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="@string/book_title"
                    android:textColor="#FFF"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/author_bestweek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/author_book_home_card"
                    android:textColor="#FFF"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.github.florent37.shapeofview.shapes.DiagonalView>


        <ImageView
            android:id="@+id/starImage"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/numbers_lovers_image"
            android:src="@drawable/star"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bookAverageRating" />

        <TextView
            android:id="@+id/bookAverageRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="1dp"
            android:text="@string/numbers_lovers_text_placeHolder"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/numb_readers_best_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="1dp"
            android:text="@string/numbers_readers_text_placeHolder_card_home"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/starImage" />

        <ImageView
            android:id="@+id/readers_best_week"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/numbers_of_readers_image_contentDescription"
            android:src="@drawable/ic_readers"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/numb_readers_best_week" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>