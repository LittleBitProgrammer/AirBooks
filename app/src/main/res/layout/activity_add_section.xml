<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.corelab.airbooks.activity.AddSection">

    <android.support.design.widget.TextInputEditText
        android:id="@id/edit_text_hidden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:inputType="text" />

    <ImageView
        android:id="@id/top_bar_categories"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:scaleType="fitXY"
        android:src="@drawable/barra_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/topBar"/>

    <TextView
        android:id="@id/top_bar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/section_add_your_book"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/top_bar_categories"
        app:layout_constraintEnd_toEndOf="@id/top_bar_categories"
        app:layout_constraintStart_toStartOf="@id/top_bar_categories"
        app:layout_constraintTop_toTopOf="@id/top_bar_categories" />

    <ImageButton
        android:id="@id/left_arrow_add_categories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:paddingStart="16dp"
        android:paddingEnd="20dp"
        android:paddingBottom="17dp"
        android:paddingTop="20dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="#00000000"
        android:contentDescription="@string/back_button"
        android:scaleType="fitCenter"
        android:src="@drawable/left_arrow"
        app:layout_constraintBottom_toBottomOf="@id/top_bar_categories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <it.corelab.airbooks.CustomTextInputLayout
        android:id="@id/text_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:windowSoftInputMode="stateAlwaysVisible"
        android:hint="@string/editText_hint_add_book"
        android:textColorHint="#B6BCC5"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        app:hintEnabled="true"
        app:mainHintTextSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/cardView"
        app:layout_constraintStart_toStartOf="@id/cardView"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:inputType="text|textNoSuggestions"
            android:textSize="18sp" />

    </it.corelab.airbooks.CustomTextInputLayout>

    <Button
        android:id="@id/color_button_next_add_book"
        android:layout_width="77dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_next"
        android:scaleType="fitXY"
        android:text="@string/next_button_text"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout" />

    <android.support.v7.widget.CardView
        android:id="@id/cardView"
        android:layout_width="190dp"
        android:layout_height="281dp"
        android:layout_marginEnd="71dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="67dp"
        android:translationZ="12dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar_categories">

        <ImageView
            android:id="@id/placeholder_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/insert_image_add_book"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_bar_categories" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
