<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ediText_background2"
        android:layout_width="0dp"
        android:layout_height="360dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/login_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />


    <ImageView
        android:id="@+id/linea1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:background="#64E8E8E8"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toTopOf="@+id/ediText_background2" />


    <ImageView
        android:id="@+id/linea2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:background="#64E8E8E8"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea1" />


    <ImageView
        android:id="@+id/linea3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:background="#64E8E8E8"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea2" />


    <ImageView
        android:id="@+id/linea4"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:background="#64E8E8E8"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea3" />

    <ImageView
        android:id="@+id/linea5"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:background="#64E8E8E8"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea4" />

    <ImageView
        android:id="@+id/messageImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/message"
        app:layout_constraintBottom_toBottomOf="@+id/linea4"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toTopOf="@+id/text_input_email" />

    <ImageView
        android:id="@+id/padlockImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/padlock"
        app:layout_constraintBottom_toBottomOf="@+id/editPassword"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea4" />

    <ImageView
        android:id="@+id/padlockImageConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/padlock"
        app:layout_constraintBottom_toBottomOf="@+id/ediText_background2"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea5" />

    <ImageView
        android:id="@+id/flagImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bandiera"
        app:layout_constraintBottom_toBottomOf="@+id/text_input_nation"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea2" />

    <ImageView
        android:id="@+id/signImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/cartello"
        app:layout_constraintBottom_toTopOf="@+id/linea2"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toBottomOf="@+id/linea1" />

    <ImageView
        android:id="@+id/personImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/nome"
        app:layout_constraintBottom_toTopOf="@+id/linea1"
        app:layout_constraintStart_toStartOf="@+id/ediText_background2"
        app:layout_constraintTop_toTopOf="@+id/text_input_name" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editPassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="2dp"
        android:hint="Password"
        android:textColorHint="#989898"
        android:windowSoftInputMode="stateAlwaysVisible"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/text_input_theme"
        app:layout_constraintBottom_toTopOf="@+id/linea5"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toEndOf="@+id/padlockImage"
        app:layout_constraintTop_toBottomOf="@+id/linea4"
        app:mainHintTextSize="155sp"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editPasswordText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:paddingTop="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/editPasswordConfirm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="2dp"
        android:hint="Confirm"
        android:textColorHint="#989898"
        android:windowSoftInputMode="stateAlwaysVisible"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/text_input_theme"
        app:layout_constraintBottom_toBottomOf="@+id/ediText_background2"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toEndOf="@+id/padlockImageConfirm"
        app:layout_constraintTop_toBottomOf="@+id/linea5"
        app:mainHintTextSize="155sp"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editPasswordTextConfirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:paddingTop="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:hint="Email"
        android:textColorHint="#989898"
        android:windowSoftInputMode="stateAlwaysVisible"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/text_input_theme"
        app:layout_constraintBottom_toTopOf="@+id/editPassword"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toEndOf="@+id/messageImage"
        app:layout_constraintTop_toBottomOf="@+id/linea3"
        app:mainHintTextSize="15sp"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_edit_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:paddingTop="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_nation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:hint="Nazionalità"
        android:textColorHint="#989898"
        android:windowSoftInputMode="stateAlwaysVisible"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/text_input_theme"
        app:layout_constraintBottom_toTopOf="@+id/linea3"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toEndOf="@+id/flagImage"
        app:layout_constraintTop_toBottomOf="@+id/linea2"
        app:mainHintTextSize="15sp"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_edit_nation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical"
            android:inputType="text"
            android:paddingTop="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_surname"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:hint="Cognome"
        android:textColorHint="#989898"
        android:windowSoftInputMode="stateAlwaysVisible"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/text_input_theme"
        app:layout_constraintBottom_toTopOf="@+id/text_input_nation"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toEndOf="@+id/signImage"
        app:layout_constraintTop_toBottomOf="@+id/linea1"
        app:mainHintTextSize="15sp"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_edit_surname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:paddingTop="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:hint="Nome"
        android:textColorHint="#989898"
        android:windowSoftInputMode="stateAlwaysVisible"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/text_input_theme"
        app:layout_constraintBottom_toTopOf="@+id/linea1"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background2"
        app:layout_constraintStart_toEndOf="@+id/personImage"
        app:layout_constraintTop_toTopOf="@+id/ediText_background2"
        app:mainHintTextSize="15sp"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password_edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:inputType="textPersonName"
            android:paddingTop="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="17sp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_signup"
        style="?attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_button_background"
        android:foreground="@drawable/ripple_effect"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ediText_background2" />

</android.support.constraint.ConstraintLayout>