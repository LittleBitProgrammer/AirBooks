<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Please insert the email associated with your account"
        android:textColor="#FFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/text_input_layout"
        app:layout_constraintStart_toStartOf="@+id/ediText_background" />

    <ImageView
        android:id="@+id/ediText_background"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/login_edit_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <android.support.design.widget.TextInputLayout
        android:id="@id/text_input_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:focusableInTouchMode="true"
        android:hint="Email"
        android:textColorHint="#989898"
        android:windowSoftInputMode="stateAlwaysVisible"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        app:layout_constraintBottom_toBottomOf="@+id/ediText_background"
        app:layout_constraintEnd_toEndOf="@+id/ediText_background"
        app:layout_constraintStart_toEndOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/ediText_background"
        app:mainHintTextSize="15sp"
        tools:ignore="UnknownId">

        <android.support.design.widget.TextInputEditText
            android:id="@id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:paddingTop="0dp"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="18sp" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/message"
        app:layout_constraintBottom_toBottomOf="@+id/text_input_layout"
        app:layout_constraintStart_toStartOf="@+id/ediText_background"
        app:layout_constraintTop_toTopOf="@+id/ediText_background" />

    <Button
        android:id="@+id/recover_btn"
        style="?attr/borderlessButtonStyle"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/login_button_background"
        android:foreground="@drawable/ripple_effect"
        android:text="RECOVER PASSWORD"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ediText_background" />

</android.support.constraint.ConstraintLayout>