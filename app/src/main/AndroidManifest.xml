<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.corelab.airbooks">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:hardwareAccelerated="true"
        tools:replace="android:icon,android:theme,android:allowBackup"
        android:allowBackup="false"
        android:icon="@mipmap/airbooks_new_logo_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/airbooks_new_logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".splash.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".activity.AddSection"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Categories"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddDescription"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BookDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ReadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AllReviews"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ReviewDetail"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.AddRecap"
            android:screenOrientation="portrait" />
        <activity
            android:name=".intro.activity.IntroActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Login"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.App.Base" />
        <activity
            android:name=".activity.SignUp"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.App.Base" />
        <activity android:name=".activity.Countries"
            android:screenOrientation="portrait"/>
    </application>

</manifest>